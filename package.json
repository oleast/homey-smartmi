{
  "name": "com.smartmi.airpurifier",
  "version": "1.0.0",
  "description": "Homey app for Smartmi Air Purifier devices",
  "main": "app.js",
  "dependencies": {
    "homey": "^3.0.0",
    "tuyapi": "^7.6.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^16.1.8",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-dist",
    "copy-dist": "cp dist/app.js . && cp dist/drivers/smartmi-p1/driver.js drivers/smartmi-p1/ && cp dist/drivers/smartmi-p1/device.js drivers/smartmi-p1/",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "homey",
    "smartmi",
    "air purifier",
    "tuya"
  ],
  "author": "Smartmi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oleast/homey-smartmi"
  }
}
